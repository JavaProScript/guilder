<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(current_user) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :username %>
        <%= f.input :about %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    <div>
  </div>
</div>
