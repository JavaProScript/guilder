<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@craft) do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    <div>
  </div>
</div>