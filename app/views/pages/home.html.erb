<div class="homepage ">
  <div class="container ">
    <h1 class="guilder-header">Guilder</h1>
    <div class="row justify-content-center">
        <%= form_tag crafts_path, method: :get , class:'form-inline' do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control form-new",
            placeholder: "Find a craft near you"
        %>
        <%= submit_tag "Search", class: "btn btn-primary this-one mx-2" %>
        <% end %>
        <%= form_tag crafts_path, method: :get , class:'form-inline' do %>
        <%= text_field_tag :address,
            params[:address],
            class: "form-control form-new",
            placeholder: "Find a craft near you"
        %>
        <%= submit_tag "Search", class: "btn btn-primary this-one mx-2" %>
        <% end %>
    </div>
  </div>
</div>